<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EditProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_12dp">

                <ImageView
                    android:id="@+id/iv_cover"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cover" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile_setting"
                    android:layout_width="@dimen/_130dp"
                    android:layout_height="@dimen/_130dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_40dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile" />

                <ImageView
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_50dp"
                    android:layout_marginStart="220dp"
                    android:layout_marginTop="120dp"
                    android:src="@drawable/component" />

                <ImageView
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="150dp"
                    android:layout_marginEnd="@dimen/_12dp"
                    android:src="@drawable/component" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_user_name_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_general"
            android:layout_marginTop="250dp"
            android:padding="4dp"
            android:text="@string/text_display_name"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_name_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_user_name_setting"
            android:layout_marginStart="@dimen/margin_general"
            android:layout_marginEnd="@dimen/margin_general">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/write"
                android:drawablePadding="@dimen/_15dp"
                android:hint="@string/lable_name" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_user_status_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_name_layout"
            android:layout_marginStart="@dimen/margin_general"
            android:layout_marginTop="20dp"
            android:padding="4dp"
            android:text="@string/text_display_status"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_status_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_user_status_setting"
            android:layout_marginStart="@dimen/margin_general"
            android:layout_marginEnd="@dimen/margin_general">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/write"
                android:drawablePadding="@dimen/_15dp"
                android:hint="@string/lable_status" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_user_number_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_status_layout"
            android:layout_marginStart="@dimen/margin_general"
            android:layout_marginTop="20dp"
            android:padding="4dp"
            android:text="@string/text_display_number"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_number_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_user_number_setting"
            android:layout_marginStart="@dimen/margin_general"
            android:layout_marginEnd="@dimen/margin_general">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_numberPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/write"
                android:drawablePadding="@dimen/_15dp"
                android:hint="@string/lable_number" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/txtShareBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_number_layout"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_12dp"
            android:layout_marginTop="@dimen/_12dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/share"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="575dp"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txtShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="80dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/share" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchRegis"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:gravity="left" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_id_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_number_layout"
            android:layout_marginStart="@dimen/margin_general"
            android:layout_marginTop="90dp"
            android:padding="4dp"
            android:text="@string/text_id_user"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_id_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_id_user"
            android:layout_marginStart="@dimen/margin_general"
            android:layout_marginEnd="@dimen/margin_general">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/write"
                android:drawablePadding="@dimen/_15dp"
                android:hint="@string/lable_id" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/txtAllowBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_number_layout"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_12dp"
            android:layout_marginTop="190dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/allow"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="759dp"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txtAllow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="70dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/enabled" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchallow"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:gravity="left" />

        </LinearLayout>

        <ImageView
            android:id="@+id/line2"
            android:layout_width="390dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="810dp"
            android:layout_marginBottom="156dp"
            android:background="@android:color/darker_gray" />

        <ImageView
            android:id="@+id/line"
            android:layout_width="390dp"
            android:layout_height="1dp"
            android:layout_below="@id/txtQr"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_12dp"
            android:layout_marginBottom="156dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/txtQr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_number_layout"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_12dp"
            android:layout_marginTop="300dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/qr"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="bold" />
    </RelativeLayout>
</ScrollView>