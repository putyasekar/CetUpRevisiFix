<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cv_profile_"
            android:layout_width="@dimen/_130dp"
            android:layout_height="@dimen/_130dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/tv_username_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cv_profile_"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/text_user_name"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="@dimen/_20dp"
            android:text="@string/text_user_status"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_status"
            android:layout_marginLeft="10dp"
            android:padding="@dimen/_10dp"
            android:text="@string/info"
            android:textColor="@android:color/black"
            android:textSize="22sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_acc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/info"

            android:background="@android:color/white"
            app:cardCornerRadius="@dimen/_10dp"
            app:cardElevation="@dimen/_20dp">

            <TextView
                android:id="@+id/acc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_status"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/key"
                android:drawablePadding="@dimen/_15dp"
                android:padding="@dimen/_10dp"
                android:text="@string/acc"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="57dp"
                android:layout_marginTop="39dp"
                android:text="@string/privacy"
                android:textSize="@dimen/_15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="65dp"
                android:drawableLeft="@drawable/keep"
                android:drawablePadding="@dimen/_15dp"
                android:padding="@dimen/_10dp"
                android:text="@string/keep"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="57dp"
                android:layout_marginTop="110dp"
                android:paddingBottom="@dimen/_20dp"
                android:text="@string/privacy"
                android:textSize="@dimen/_15dp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cv_acc"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/_30dp"
            android:padding="@dimen/_10dp"
            android:text="@string/general"
            android:textColor="@android:color/black"
            android:textSize="22sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_general"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/general"
            android:background="@android:color/white"
            app:cardCornerRadius="@dimen/_10dp"
            app:cardElevation="@dimen/_20dp">

            <TextView
                android:id="@+id/chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_status"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/chat"
                android:drawablePadding="@dimen/_15dp"
                android:padding="@dimen/_10dp"
                android:text="@string/chats"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="57dp"
                android:layout_marginTop="39dp"
                android:text="@string/theme"
                android:textSize="@dimen/_15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="65dp"
                android:drawableLeft="@drawable/notif"
                android:drawablePadding="@dimen/_15dp"
                android:padding="@dimen/_10dp"
                android:text="@string/notif"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="57dp"
                android:layout_marginTop="110dp"
                android:text="@string/group"
                android:textSize="@dimen/_15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="150dp"
                android:drawableLeft="@drawable/media"
                android:drawablePadding="@dimen/_15dp"
                android:padding="@dimen/_10dp"
                android:text="@string/media"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="57dp"
                android:layout_marginTop="190dp"
                android:text="@string/photos"
                android:textSize="@dimen/_15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="230dp"
                android:drawableLeft="@drawable/friends"
                android:drawablePadding="@dimen/_15dp"
                android:padding="@dimen/_10dp"
                android:text="@string/friends"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="57dp"
                android:layout_marginTop="270dp"
                android:text="@string/sync"
                android:textSize="@dimen/_15dp" />

            <TextView
                android:id="@+id/bahasa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="310dp"
                android:drawableLeft="@drawable/bahasa"
                android:drawablePadding="@dimen/_15dp"
                android:padding="@dimen/_10dp"
                android:text="@string/bahasa"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/others"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cv_general"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/_30dp"
            android:padding="@dimen/_10dp"
            android:text="@string/others"
            android:textColor="@android:color/black"
            android:textSize="22sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_others"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/others"
            android:background="@android:color/white"
            app:cardCornerRadius="@dimen/_10dp"
            app:cardElevation="@dimen/_20dp">

            <TextView
                android:id="@+id/storage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/chat"
                android:drawablePadding="@dimen/_15dp"
                android:padding="@dimen/_10dp"
                android:text="@string/storage"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="57dp"
                android:layout_marginTop="39dp"
                android:text="@string/network"
                android:textSize="@dimen/_15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="65dp"
                android:drawableLeft="@drawable/help"
                android:drawablePadding="@dimen/_15dp"
                android:padding="@dimen/_10dp"
                android:text="@string/help"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="57dp"
                android:layout_marginTop="110dp"
                android:text="@string/helpers"
                android:textSize="@dimen/_15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="150dp"
                android:drawableLeft="@drawable/media"
                android:drawablePadding="@dimen/_15dp"
                android:padding="@dimen/_10dp"
                android:paddingBottom="@dimen/_20dp"
                android:text="@string/delete"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</ScrollView>
